{
  "name": "webman-tech/components-monorepo",
  "description": "webman components monorepo",
  "type": "library",
  "authors": [
    {
      "name": "kriss",
      "email": "462679766@qq.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "monolog/monolog": "^3.0",
    "workerman/crontab": "^1.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.47",
    "pestphp/pest": "^3.8",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-webmozart-assert": "^2.0",
    "rector/rector": "^2.0",
    "symfony/var-dumper": "^7.2",
    "workerman/webman-framework": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "WebmanTech\\CrontabTask\\": "packages/crontab-task/src",
      "WebmanTech\\Logger\\": "packages/logger/src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "scripts": {
    "composer-du": "composer du",
    "composer-update": "composer update",
    "phpatan-raw": "phpstan --error-format=raw",
    "phpstan": "phpstan",
    "rector": "rector",
    "script:clean-temp-files": "php scripts/clean_temp_files.php",
    "script:composer-generate": "php scripts/composer-generate.php && composer du",
    "test": "pest"
  }
}